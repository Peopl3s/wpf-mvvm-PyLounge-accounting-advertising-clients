<!-- PasswordBox с возможностью биндинга данных -->
<UserControl x:Class="WPFRJCode.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFRJCode.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    
    <StackPanel Orientation="Vertical">
        
        <PasswordBox x:Name="PasswordTextBox"
                 FontSize="13" FontWeight="Medium"
                 FontFamily="Montserrat" Foreground="{StaticResource primaryTextColor1}"
                 CaretBrush="LightGray" BorderBrush="{StaticResource primaryTextColor2}"
                 BorderThickness="0,0,0,1" VerticalAlignment="Center" Padding="20,0,0,0">
            <PasswordBox.Background>
                <ImageBrush ImageSource="/WPFRJCode;component/Images/key-icon.png"  Stretch="None" AlignmentX="Left"/>
            </PasswordBox.Background>
        </PasswordBox>
        
    </StackPanel>
    
</UserControl>
